 @model WebViewContact.Models.ViewModels.AddContactRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Contact - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
                 <div class="mb-3">
            <label class="form-label">FirstName</label>
            <input type="text" class="form-control"  id="firstName" asp-for="FirstName"/>
        </div>

        <div class="mb-3">
            <label class="form-label">LastName</label>
            <input type="text" class="form-control" id="lastName" asp-for="LastName"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" id="address" asp-for="Address"/>
        </div>

        <div class="mb-3">
            <label class="form-label">PhoneNumber</label>
            <input type="text" class="form-control" id="phoneNumber" asp-for="PhoneNumber"/>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Save</button>
        </div>
    </form>
</div>
